---
interface Props {
  cats: string[];
}

const { cats } = Astro.props;
---

<aside
  class="p-4 border-r border-slate-400 min-w-fit hidden md:block shadow-[rgba(0,0,0,0.5)_0px_0px_8px_0px]"
>
  <h2>Categor√≠as</h2>
  <hr class="h-px my-4 bg-slate-400 border-0" />
  {
    cats.map((cat) => (
      <div class="py-2">
        <a
          class={`${
            cat === Astro.params.categoryWeb
              ? 'text-[#f98b24]'
              : 'text-slate-950'
          }`}
          href={`/libreria-alfa/productos/${cat}/1/`}
        >
          {cat}
        </a>
      </div>
    ))
  }
</aside>
